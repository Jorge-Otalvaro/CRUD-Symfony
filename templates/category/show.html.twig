{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    

    <h1>{{ category.name }}</h1>    

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Active</th>
                <td>{{ category.active ? 'Activo' : 'Inactivo' }}</td>
            </tr>

            <tr>
                <th>CreatedAt</th>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>

            <tr>
                <th>UpdatedAt</th>
                <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>

        </tbody>
    </table>

    <div class="card-body" style="text-align: right;">   
        <a href="{{ path('app_category_index') }}" class="btn btn-info btn-sm ml-auto">Volver al indice de categorías</a>

        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-success btn-sm ml-auto">Editar la categoría</a>        
    </div>

    {{ include('category/_delete_form.html.twig') }}

{% endblock %}
